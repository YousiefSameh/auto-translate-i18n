{
  "name": "auto-i18n",
  "version": "1.0.0",
  "description": "Zero-Effort Localization for React & Next.js. Automate your i18n pipeline with AST parsing and AI translation.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "bin": {
    "auto-i18n": "./dist/index.js"
  },
  "keywords": [
    "i18n",
    "react",
    "nextjs",
    "localization",
    "translation",
    "automation",
    "ai",
    "openai",
    "ast",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^24.10.1",
    "chalk": "^4.1.2",
    "commander": "^14.0.2",
    "conf": "^15.0.2",
    "dotenv": "^17.2.3",
    "fast-glob": "^3.3.3",
    "openai": "^6.9.1",
    "ora": "^5.4.1",
    "ts-morph": "^27.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2"
  }
}
